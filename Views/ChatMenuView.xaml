<UserControl  x:Class="WebChatClientApp.Views.ChatMenuView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WebChatClientApp.Views"
      xmlns:controllers="clr-namespace:WebChatClientApp.ViewModels" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:converters="clr-namespace:WebChatClientApp.Converters" mc:Ignorable="d">

    <UserControl.DataContext>
        <controllers:ChatMenuViewModel/>
    </UserControl.DataContext>

    <!--<UserControl.Resources>
        <converters:ActiveConnection x:Key="ActiveConnection"/>
    </UserControl.Resources>-->
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <Border Width="60" Height="35"
                        BorderBrush="Gray" VerticalAlignment="Bottom">
                        <Border.Background>
                            <SolidColorBrush Color="#353535"/>
                        </Border.Background>
                        <TextBlock FontSize="14" Foreground="White" VerticalAlignment="Center" 
                               HorizontalAlignment="Center">Home</TextBlock>
                    </Border>
                    <Border Width="30">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="White">+</TextBlock>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="40*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            </Grid>

            <Grid>
                <TextBlock Text="Online" HorizontalAlignment="Center" 
                           Foreground="Green"/>
            </Grid>
            
            <Grid Grid.Column="0" Margin="10 50">
                <ListView ItemsSource="{Binding Chats}" SelectedItem="{Binding Chat}" 
                          BorderBrush="#FF4E67AF" FontSize="20" Background="{x:Null}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Right">
                                <TextBlock TextAlignment="Right" Foreground="White" Text="{Binding Title}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <ListView DataContext="{Binding Chat}" ItemsSource="{Binding Messages}" Margin="0 0 0 50" Grid.Row="1" ScrollViewer.CanContentScroll="True" Foreground="White">
                    <ListView.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0"/>
                    </ListView.BorderBrush>
                    <ListView.Background>
                        <SolidColorBrush Color="#FF4B7188" Opacity="0.5"/>
                    </ListView.Background>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel VerticalAlignment="Bottom"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
   
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="24" Text="{Binding Text}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Grid Grid.Column="2" Margin="10 50" VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center" Foreground="White" FontSize="20">Input message</TextBlock>
                    <TextBox x:Name="MessageBox" Foreground="White" Height="50" 
                             DataContext="{Binding Chat}" Text="{Binding Message}"
                             SelectionBrush="#FF2A54FD" SelectionTextBrush="#FFEC8EE8">
                        <TextBox.Background>
                            <SolidColorBrush Color="Black" Opacity="0"/>
                        </TextBox.Background>
                    </TextBox>
                    <Button Content="Send" Foreground="White" Background="#FF2BA3B3" 
                            Command="{Binding SendMessage}" CommandParameter="{Binding ElementName=MessageBox, Path=Text}"/>
                </StackPanel>

            </Grid>

            <!--<Image Width="200" Source="/Views/Opera Снимок_2023-08-09_154429_looka.com-benzin-preview.png" ></Image>-->
            <!--<Button></Button>-->
            <!--<ListView>
                
            </ListView>-->
        </Grid>

        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction 
                    Command="{Binding LoadingCommand}"
                    CommandParameter="{Binding DataContext.User, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    />
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <!--<ContentControl Content="{Binding SelectedViewModel}"/>-->
    </Grid>
</UserControl>
