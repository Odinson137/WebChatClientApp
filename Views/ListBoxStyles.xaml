<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:recontrolls="clr-namespace:WebChatClientApp.Views.ReControls" >

    <Style TargetType="recontrolls:AutoScrollListBox">
        <!-- Настройте стиль для AutoScrollListBox здесь -->
        <Setter Property="Background" Value="{x:Null}" />
        <Setter Property="BorderBrush" Value="{x:Null}" />
        <Setter Property="BorderThickness" Value="0" />
        <!-- ... Другие настройки ... -->
    </Style>

    <Style TargetType="Border">
        <!-- Настройте стиль для Border внутри ItemTemplate здесь -->
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="{StaticResource BlackColor}" Opacity="0.6"/>
            </Setter.Value>
        </Setter>
        <!-- ... Другие настройки ... -->
    </Style>

    <!-- Другие стили ... -->

</ResourceDictionary>
